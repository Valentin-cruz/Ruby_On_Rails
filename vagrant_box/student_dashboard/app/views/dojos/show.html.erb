<div class="container">
    <h2><%= @dojo.branch %></h2>
    <p>Address: <%= @dojo.street %></p>
    <p>City: <%= @dojo.city %></p>
    <p>State: <%= @dojo.state %></p>

    <a href="/dojos">Dojos Home</a> | <a href="/dojos/<%= @dojo.id %>/edit">Edit</a> | <a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a>

    <h3>Student List</h3>
    <table>
        <tbody>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>

        <% @students.each do |student| %>
        <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.email %></td>
            <td><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a> |
            <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a> |
            <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>" data-method="delete">Delete</a>
            </td>
        </tr>
        <% end %>

        </tbody>
    </table>

    <div class="errors">
        <% if flash[:success] %>
        <p><%= flash[:success] %></p>
        <% end %>
    </div>

</div>